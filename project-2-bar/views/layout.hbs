<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Office Quotes</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1>The Office Quotes</h1>

  <div id="controls">
    <input type="text" id="filterInput" placeholder="Filter by character">
    <button id="sortCharacter">Sort by Character</button>
    <button id="sortEpisode">Sort by Episode</button>
    <button id="sortLength">Sort by Quote Length</button>
  </div>

  <table id="quoteTable">
    <thead>
      <tr>
        <th>Character</th>
        <th>Quote</th>
        <th>Episode</th>
      </tr>
    </thead>
    <tbody id="quoteTableBody">
      </tbody>
  </table>

  <script src="/javascripts/script.js"></script>
</body>
</html>
